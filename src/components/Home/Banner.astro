---
import Background from "../../assets/images/background.webp";
import Link from "../General/Link";
---

<section
  style={{
    backgroundImage: `linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(${Background.src})`,
  }}
  class="top-0 -z-10 flex h-screen w-screen flex-col justify-end bg-slate-400 bg-cover bg-center lg:justify-center"
>
  <div class="mx-auto w-full max-w-container-lg pb-11 lg:pb-0">
    <div
      class="mx-auto flex max-w-md flex-col gap-8 text-white md:mx-0 md:max-w-2xl"
    >
      <h1 class="text-3xl font-semibold md:text-6xl">
        A people-first estate agent in Basingstoke
      </h1>
      <p class="text-sm md:text-base">
        Jacobs Properties is a family-run estate and letting agency in
        Basingstoke, helping people in and around the area with all things
        property.
      </p>
      <div
        class="flex flex-col items-center justify-center gap-3 md:flex-row md:justify-start"
      >
        <Link link="/" text="Instant Valuation" type="white" size="lg" />
        <Link link="/" text="Expert Valuation" type="secondary" size="lg" />
      </div>
    </div>
  </div>
</section>
