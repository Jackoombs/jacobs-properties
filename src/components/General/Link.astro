---
import clsx from "clsx";
interface Props {
  text: string;
  link: string;
  type: "primary" | "secondary" | "white" | "transparent";
  size: "sm" | "md" | "lg";
  classes?: string;
}

const { text, link, type, size, classes } = Astro.props;
---

<a
  class={clsx(
    "w-full flex items-center justify-center h-16 md:h-[2.75rem] rounded-lg uppercase duration-100 text-xs font-semibold",
    classes,
    type === "primary" && "bg-primary-100 text-white hover:brightness-110",
    type === "secondary" &&
      "bg-secondary-100 text-primary-100 hover:brightness-110",
    type === "white" && "bg-white text-primary-100 hover:bg-blue-100",
    type === "transparent" &&
      "bg-transparent text-white border-2 border-white hover:bg-primary-100 hover:text-white hover:border-primary-100",
    size === "sm" && "md:w-16",
    size === "md" && "md:w-40",
    size === "lg" && "md:w-[11.25rem]"
  )}
  href={link}>{text}</a
>
