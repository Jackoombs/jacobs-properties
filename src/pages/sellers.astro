---
import StandardLayout from "../layouts/StandardLayout.astro";
import Link from "../components/General/Link";
import Home3 from "../assets/images/home_3.webp";
import Stats from "../components/General/Stats";
import Dropdown from "../components/General/Dropdown";
import SectionLabel from "../components/General/Text/SectionLabel";
import SectionHeader from "../components/General/Text/SectionHeader";
---

<StandardLayout title="Sellers">
  <main>
    <section
      class="relative flex flex-col gap-8 bg-primary-200 py-14 md:flex-row md:gap-0 md:py-section"
    >
      <div
        class="mx-auto grid max-w-container-lg items-center gap-8 md:grid-cols-2"
      >
        <img
          loading="lazy"
          class="aspect-[1.42_/_1] h-auto w-full max-w-2xl flex-1 self-center rounded-big object-cover object-left md:order-1 md:inline"
          src={Home3.src}
          alt=""
        />
        <div
          class="mx-auto flex flex-col gap-8 text-primary-100 md:mx-0 md:max-w-lg"
        >
          <SectionLabel text="Sellers" />
          <h1
            class="text-3xl font-bold md:max-w-md md:text-[3.25rem] md:leading-tight"
          >
            Sell your home in Basingstoke
          </h1>
          <p class="text-sm md:text-base">
            There's a lot to consider when selling your home, that's why you
            need a reliable estate agent by your side. Luckily for you, our
            people-centric agents are here to help.
          </p>
          <div
            class="flex flex-col items-center justify-center gap-3 md:flex-row md:justify-start"
          >
            <Link link="/" text="Expert Valuation" type="primary" size="lg" />
            <Link
              link="/"
              text="Instant Valuation"
              type="secondary"
              size="lg"
            />
          </div>
        </div>
      </div>
    </section>

    <section class="w-full py-14 text-center text-primary-100 md:py-32">
      <div class="mx-auto flex max-w-container-lg flex-col items-center gap-8">
        <h2
          class="w-full text-3xl font-bold md:text-[3.25rem] md:leading-tight"
        >
          On a mission to sell your home.
        </h2>
        <p class="hidden text-2xl font-semibold md:block">
          Our focus is to get a broader exposure for your property,<br
          />negotiate a better deal and make sure the process is<br />smooth and
          stress free all the way.
        </p>
        <p class="text-lg font-semibold md:hidden">
          Our focus is to get a broader exposure for your property, negotiate a
          better deal and make sure the process is smooth and stress free all
          the way.
        </p>
      </div>
    </section>

    <section class="py-14md:pt-[4.375rem] bg-primary-200 md:pb-section">
      <div class="mx-auto max-w-container-lg">
        <Stats client:visible />
      </div>
    </section>

    <section class="bg-white py-14 md:py-section">
      <div class="mx-auto flex max-w-container-lg flex-col gap-8">
        <SectionHeader text="Four reasons you should let with us" />
        <div class="grid gap-12 md:grid-cols-2">
          <img
            src={Home3.src}
            loading="lazy"
            class="aspect-[1.42_/_1] h-auto w-full max-w-2xl flex-1 self-center rounded-big object-cover"
            alt=""
          />
          <Dropdown client:visible />
        </div>
      </div>
    </section>
  </main>
</StandardLayout>
